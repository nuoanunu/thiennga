    <script>
        function checkHidden() {
            var flag = true;
            for (i = 0; i < 20; i++) {
                var value = $("#warrantyDiv" + i + " #war_warrantyID").val();
                if (value != "") { alert(value); }
                if (flag) {
                    if (value == null || value == "") {
                        $("#warrantyDiv" + i).show();
                        flag = false;
                    }
                }
                else {
                    $("#warrantyDiv" + i).hide();
                }
            }
        }
 
        setInterval(checkHidden, 100);
    </script>
